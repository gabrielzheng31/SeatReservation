<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabriel.seatreservation.SeatActivity"
    tools:layout_editor_absoluteY="81dp">


    <com.example.gabriel.seatreservation.SeatTable
        android:id="@+id/seatView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#f5f5f5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_reserved"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="89dp"
        android:text="确认"
        app:layout_constraintBottom_toBottomOf="@+id/button_canceled"
        app:layout_constraintEnd_toStartOf="@+id/button_canceled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_canceled" />

    <Button
        android:id="@+id/button_canceled"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="93dp"
        android:text="取消"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_reserved" />

    <Spinner
        android:id="@+id/spinner_start"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="15dp"
        android:background="?attr/colorButtonNormal"
        android:entries="@array/time"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button_reserved"
        app:layout_constraintEnd_toEndOf="@+id/button_reserved" />

    <Spinner
        android:id="@+id/spinner_end"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:background="?attr/colorButtonNormal"
        android:entries="@array/time"
        android:gravity="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/spinner_start"
        app:layout_constraintStart_toStartOf="@+id/button_canceled" />


</android.support.constraint.ConstraintLayout>
